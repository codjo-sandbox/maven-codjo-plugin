<project>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>net.codjo.mad</groupId>
                <artifactId>codjo-mad-common</artifactId>
                <version>3.19</version>
            </dependency>
            <dependency>
                <groupId>net.codjo.mad</groupId>
                <artifactId>codjo-mad-common</artifactId>
                <version>3.19</version>
            </dependency>
            <dependency>
                <groupId>net.codjo.mad</groupId>
                <artifactId>codjo-mad-server</artifactId>
                <version>3.19</version>
            </dependency>
            <dependency>
                <groupId>net.codjo.mad</groupId>
                <artifactId>codjo-mad-server</artifactId>
                <classifier>tests</classifier>
                <scope>test</scope>
                <version>3.19</version>
            </dependency>
            <dependency>
                <groupId>net.codjo.mad</groupId>
                <artifactId>codjo-mad-client</artifactId>
                <version>3.19</version>
            </dependency>
            <dependency>
                <groupId>net.codjo.mad</groupId>
                <artifactId>codjo-mad-client</artifactId>
                <classifier>tests</classifier>
                <version>3.19</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>net.codjo.mad</groupId>
                <artifactId>codjo-mad-gui</artifactId>
                <version>3.19</version>
            </dependency>
            <dependency>
                <groupId>net.codjo.mad</groupId>
                <artifactId>codjo-mad-gui</artifactId>
                <classifier>tests</classifier>
                <version>3.19</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>net.codjo.bootstrap</groupId>
                <artifactId>codjo-bootstrap-common</artifactId>
                <version>5.89-rc1</version>
            </dependency>
            <dependency>
                <groupId>net.codjo.test</groupId>
                <artifactId>codjo-test-common</artifactId>
                <version>6.45-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>net.codjo.database</groupId>
                <artifactId>codjo-database-sybase</artifactId>
                <version>2.2</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>net.codjo.maven.mojo</groupId>
                    <artifactId>maven-datagen-plugin</artifactId>
                    <version>1.22-SNAPSHOT</version>
                    <dependencies>
                        <dependency>
                            <groupId>net.codjo.database</groupId>
                            <artifactId>codjo-database-${databaseType}</artifactId>
                            <version>2.2</version>
                        </dependency>
                    </dependencies>
                    <executions>
                        <execution>
                            <goals>
                                <goal>generate</goal>
                                <goal>package-client</goal>
                                <goal>package-server</goal>
                                <goal>package-sql</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <vmArguments>-Xms256m -Xmx512m -XX:MaxPermSize=256m</vmArguments>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>net.codjo.maven.mojo</groupId>
                    <artifactId>maven-config-plugin</artifactId>
                    <version>1.2-rc1</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>config</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.3</version>
                    <configuration>
                        <systemProperties>
                            <property>
                                <name>log4j.configuration</name>
                                <value>file:${user.home}\log4j.properties</value>
                            </property>
                        </systemProperties>
                        <forkMode>once</forkMode>
                        <includes>
                            <include>**/*Test.java</include>
                        </includes>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-report-plugin</artifactId>
                    <version>2.3-SNAPSHOT</version>
                    <configuration>
                        <showSuccess>false</showSuccess>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <modules>
        <module>pom-module</module>
        <module>pom-module-nodependencies</module>
    </modules>
</project>