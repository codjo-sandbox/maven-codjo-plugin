<project>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>net.codjo.maven</groupId>
                <artifactId>codjo-maven-common</artifactId>
                <version>1.6</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>net.codjo.maven.mojo</groupId>
                    <artifactId>maven-database-plugin</artifactId>
                    <version>1.12</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>init</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <dependencies>
                    <dependency>
                        <groupId>net.codjo.maven</groupId>
                        <artifactId>codjo-maven-enforcer</artifactId>
                        <version>2.0</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <configuration>
                            <rules>
                                <myCustomRule
                                      implementation="net.codjo.maven.enforcer.VerifyDependencyManagement"/>
                            </rules>
                        </configuration>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>